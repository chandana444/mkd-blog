{
  "name": "mkd-blog",
  "version": "1.0.0",
  "description": "Markdown Blog. Converts Markdown to Articles!",
  "main": "app.js",
  "author": "Kunal Keshan, Think-Digital 2021",
  "license": "MIT",
  "scripts": {
    "start": "node app.js",
    "build": "npm run tailwind && npm run sass",
    "sass-w": "node-sass -w src/helper/css/sass -o src/helper/css/sass-output",
    "sass": "node-sass src/helper/css/sass -o src/helper/css/sass-output",
    "tailwind-w": "npx tailwindcss -i ./src/helper/css/tailwind.css -o ./public/css/common.css --watch",
    "tailwind": "npx tailwindcss -i ./src/helper/css/tailwind.css -o ./public/css/common.css",
    "dev": "echo \">>> Starting Local Development Environment\" && concurrently \"nodemon .\" \"npm run tailwind-w\" \"npm run sass-w\""
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "axios": "^0.24.0",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.27.1",
    "cookie-parser": "^1.4.6",
    "ejs": "^3.1.6",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "marked": "^4.0.10",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "mysql2": "^2.3.3",
    "nanoid": "^3.1.31",
    "node-sass": "^7.0.1",
    "node-schedule": "^2.1.0",
    "nodemailer": "^6.7.2",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "rebrandly": "^2.0.1",
    "sequelize": "^6.12.5",
    "tailwindcss": "^3.0.16",
    "turndown": "^7.1.1",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "dotenv": "^10.0.0",
    "nodemon": "^2.0.15"
  }
}
